@model MemberLoginForm
@{
	ViewData["Title"] = "Login";
	Layout = "_Layout";
}
<section id="login">
<div class="center-screen">
    <div class="surface">
        <div class="card-header">
            <h1>Login</h1>
        </div>
        <div class="card-body">
            <form method="post" asp-controller="Auth" asp-action="Login" novalidate enctype="multipart/form-data">


                @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessage))
                {
                    <div class="alert error">
                        @ViewBag?.ErrorMessage
                    </div>
                }

                <div class="form-group">
                    <label class="form-label" asp-for="Email"></label>
                    <input class="form-input" asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>


                <div class="form-group">
                    <label class="form-label" asp-for="Password"></label>
                    <input class="form-input" asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>

                <button type="submit" class="btn btn-blue" >Login</button>

            </form>

        </div>
        <div class="card-footer">Dont have an Account? <a asp-controller="Auth" asp-action="SignUp">Create Account</a> </div>
    </div>
</div>
</section>